bind=SUPER,mouse_down,workspace,e+1
bind=SUPER,mouse_up,workspace,e-1
bind=SUPER,g,togglegroup
bind=ALT, TAB, exec, ~/.config/hypr/scripts/tab_floating_windows
bind=SUPER,tab,changegroupactive
bindl=,switch:Lid Switch,exec,~/.config/hypr/scripts/lock
bindl=,switch:Lid Switch,exec,systemctl suspend

# Split horizontally and vertically
bind = SUPER, b, exec, hyprctl dispatch splitratio h
bind = SUPER, v, exec, hyprctl dispatch splitratio v

# Switch layout (tabbed and split toggle)
bind = SUPER, w, exec, hyprctl dispatch togglesplit
bind = SUPER, e, exec, hyprctl dispatch togglesplit

# Make the current window fullscreen
bind = SUPER, f, exec, hyprctl dispatch fullscreen

# Toggle between tiling and floating mode
bind = SUPER_SHIFT, SPACE, exec, hyprctl dispatch togglefloating

# Swap focus between floating and tiling
bind = SUPER, SPACE, exec, hyprctl dispatch toggletiled

# Move focus to the parent container
bind = SUPER, a, exec, hyprctl dispatch focus parent

# Binds to launch programs
bind=SUPER, e ,exec,nautilus
bind=SUPER, d, exec,~/.config/rofi/launchers/type-2/launcher.sh
